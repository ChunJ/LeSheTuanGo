@model LeSheTuanGo.ViewModels.MemberViewModel

<h4>儲值</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Charge">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
                <div class="form-group">
                    <label asp-for="Balance" class="control-label"></label>
                    <div class="row">
                        <div class="col-md-4">
                            <input type="radio" asp-for="Balance" class="form-control" value="500" />
                            <label>500</label>
                        </div>
                        <div class="col-md-4">
                            <input type="radio" asp-for="Balance" class="form-control" value="1000" />
                            <label>1000</label>
                        </div>
                        <div class="col-md-4">
                            <input type="radio" asp-for="Balance" class="form-control" value="1500" />
                            <label>1500</label>
                        </div>
                    </div>
                        <span asp-validation-for="Balance" class="text-danger"></span>
                    </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
