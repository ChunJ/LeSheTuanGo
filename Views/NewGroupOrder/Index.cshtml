@model LeSheTuanGo.Models.Order

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <input asp-for="HostMemberId" value="" hidden />
            <div class="form-group">
                <label>產品類別</label>
                <select id="CategoryId" class="form-control" onchange="getProduct('#ProductId')" asp-items="ViewBag.Category"></select>
            </div>
            <div class="form-group">
                <label for="ProductId">產品名稱</label>
                <select asp-for="ProductId" class="form-control"></select>
                <select class="form-control" data-val="true" data-val-required="The DistrictId field is required.">
                </select>
            </div>
            <div class="form-group">
                <label>城市</label>
                <select id="CityId" class="form-control" onchange="getDistrict('#DistrictId')" asp-items="ViewBag.City"></select>
            </div>
            <div class="form-group">
                <label for="DistrictId">鄉鎮市區</label>
                <select asp-for="DistrictId" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address">地址</label>
                <input asp-for="Address" value=@ViewData["Address"] class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCount">目標購買數量</label>
                <input asp-for="MaxCount" class="form-control" />
                <span asp-validation-for="MaxCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime">截止時間</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice">每單位價格</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    是否提供外送服務
                    <input class="form-check-input" asp-for="CanGo" /> @Html.DisplayNameFor(model => model.CanGo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="GoRangeId">外送距離限制</label>
                <select asp-for="GoRangeId" class="form-control" asp-items="ViewBag.GoRangeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderDescription">團購說明</label>
                <textarea id="OrderDescription" name="OrderDescription" rows="7" class="form-control"></textarea>
                <span asp-validation-for="OrderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="button" value="test" class="btn btn-primary" onclick="test();" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
<script>
    let cityS = document.querySelector("#CityId");
    let distS = document.querySelector("#DistrictId"); 
    let cateS = document.querySelector("#CategoryId");
    let prodS = document.querySelector("#ProductId");
    window.onload = function () {
        cityS.value = @ViewData["CityId"];
        fillDistrict(@ViewData["CityId"], "#DistrictId", function () {
            distS.value = @ViewData["DistrictId"];
        });
        cateS.value = @ViewData["CategoryId"];
        fillProduct(@ViewData["CategoryId"], "#ProductId", function () {
            distS.value = @ViewData["ProductId"];
        });
    }
    function test() {

    }
</script>
}
