@model IEnumerable<LeSheTuanGo.Models.GarbageServiceOffer>


<table class="table">
    <thead>
        <tr>
            <th>
                地址Id
            </th>
            <th>
                地區
            </th>
            <th>
                是否可以外送
            </th>
            <th>
                3公升上限
            </th>
            <th>
                5公升上限
            </th>
            <th>
                14公升上限
            </th>
            <th>
                25公升上限
            </th>
            <th>
                33公升上限
            </th>
            <th>
                75公升上限
            </th>
            <th>
                120公升上限
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrictId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CanGo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.L3maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L5maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L14maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L25maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L33maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L75maxCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L120maxCount)
                </td>

            </tr>
        }

    </tbody>
</table>
@*<p>
        <a asp-action="Index">加入清單</a>
    </p>*@
<form method="post">
    @foreach (var item in Model)
    {
        <input type="hidden" name="garbageserviceofferid" value="@item.GarbageServiceId" />
        <hr />
        <h3>加入清單:</h3>


        <h4>L3:<input type="number" name="L3" min="0" max='@ViewData["L3count"]' /></h4>
        <h4>L5:<input type="number" name="L5" min="0" max='@ViewData["L5count"]' /></h4>
        <h4>L14:<input type="number" name="L14" min="0" max='@ViewData["L14count"]' /></h4>
        <h4>L25:<input type="number" name="L25" min="0" max='@ViewData["L25count"]' /></h4>
        <h4>L33:<input type="number" name="L33" min="0" max='@ViewData["L33count"]' /></h4>
        <h4>L75:<input type="number" name="L75" min="0" max='@ViewData["L75count"]' /></h4>
        <h4>L120:<input type="number" name="L120" min="0" max='@ViewData["L120count"]' /></h4>
        <h4>是否外送:<input type="checkbox" name="needcome" /></h4>
        <h4>地址:<input type="text" name="comeaddress" /></h4>
        <input type="hidden" name="comedistrictid" value="@item.DistrictId" />
        <div class="form-group">
            <input type="submit" value="送出" class="btn btn-primary" />
        </div>
    }
</form>
