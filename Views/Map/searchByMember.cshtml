    <script>
        let table100m = document.getElementById("table100m");
        let tbodycont = document.getElementById("content");

        var js;  //store material from backend

        function init100M() {
            $.ajax({
                url: "/map/spotlessthan100m",
                type: "GET",
                success: function (listJsonString) {
